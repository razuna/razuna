RUN wget http://s.razuna.com.s3.amazonaws.com/apache-tomcat-7.0.54.tar.gz -P /opt
RUN tar -C /opt -xzvf /opt/apache-tomcat-7.0.54.tar.gz
RUN ln -s /opt/apache-tomcat-7.0.54 /opt/tomcat
# Install native Tomcat library
RUN apt-get -y install libapr1 gcc libssl-dev libapr1-dev
RUN mkdir /usr/local/apr/
RUN mkdir /usr/local/apr/lib
RUN cd /opt/tomcat/bin && tar -xzvf tomcat-native.tar.gz
RUN cd /opt/tomcat/bin/tomcat-native-1.1.30-src/jni/native/ && ./configure --with-apr=/usr/bin/apr-config --with-java-home=/usr/lib/jvm/java-7-oracle --prefix=/opt/tomcat && make && make install
RUN ln -s /opt/tomcat/lib/libtcnative-1.so.0.1.30 /usr/local/apr/lib/libtcnative-1.so
